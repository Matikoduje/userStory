{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="col-lg-4 col-lg-offset-4">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username">Nazwa użytkownika</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
        <label for="password">Hasło</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" />
    </div>

    <div class="checkbox">
        <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on">
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Zapamiętaj mnie</span>
        </label>
    </div>

    <input type="submit"
           class="btn btn-success btn-sm"
           id="_submit"
           name="_submit"
           value="Zapisz" />
</form>
