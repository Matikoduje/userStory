<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/theme.min.css') }}">
        <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav id="navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#myNavigationBar">
                    <span class="sr-only">Rozwiń menu
                    </span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('welcome') }}"><span><b>Książka adresowa</b></span> </a>
            </div>
            <div class="collapse navbar-collapse" id="myNavigationBar">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('ROLE_USER') %}
                        {#<li><a class="btn btn-default btn-sm" href="{{ path('addMap') }}"><span class="glyphicon glyphicon-plus"></span> Dodaj </a></li>#}
                        {#<li><a class="btn btn-default btn-sm" href="{{ path('map') }}"><span class="glyphicon glyphicon-globe"></span> Obserwacje </a></li>#}
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> Kontakty
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('personForm') }}">Dodaj kontakt</a></li>
                                <li><a href="{{ path('showAllPersons') }}">Pokaż kontakty</a></li>
                                {#<li><a href="{{ path('changeUserData') }}">Zmień hasło/email</a></li>#}
                                {#<li><a href="#">Usuń konto</a></li>#}
                            </ul>
                        </li>
                        <li><a class="btn btn-default btn-sm" href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Wylogowanie </a></li>
                    {% else %}
                        <li><a class="btn btn-default btn-sm" href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> Rejestracja</a></li>
                        <li><a class="btn btn-default btn-sm" href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span> Logowanie</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
        <br>
        <br>
        <br>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
